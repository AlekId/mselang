program classmethod;
 
type
 objty = object
  f1: int32;
  constructor create();
  destructor destroy();
 end;
 
constructor objty.create();
begin
end;
 
destructor objty.destroy();
begin
 writeln('abc ',f1);
end;
 
var
 obj1: objty; //auf dem stack, braucht kein create
 obj2: ^objty;
begin
 obj1.f1:= 123;
 obj1.create();
 obj2:= objty.create(); //im heap
 obj2^.f1:= 456;
 obj2.destroy();
 obj1.destroy();
end.