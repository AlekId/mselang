program objectintf;

type
 objty = object
  f1: int32;
  f2: int32;
  constructor create();
  destructor destroy();
 end;
 pobjty = ^objty;

 TObj = class(objty)
 end;

constructor objty.create();
begin
end;

destructor objty.destroy();
begin
end;

var
 obj1: objty;  //an instance on stack, needs no create() or destroy()
 obj2: ^objty; //on heap
 obj3: pobjty;
 obj4: TObj;   //on heap
begin
 obj1.f1:= 123; //no create() call necessary, no destroy() call necessary

 obj2:= objty.create();
 obj2^.f1:= 123;       //note the '^' dereference
 obj3:= objty.create();
 obj3^.f1:= 123;       //note the '^' dereference
 obj4:= TObj.create();
 obj4.f1:= 123;        //no '^' dereference
 obj2.destroy();
 obj3.destroy();
 obj4.destroy();
end.