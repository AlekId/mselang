program classvirtual;
type
 tc1 = class[virtual]
  public
   constructor create();
   destructor destroy();
   method test(); virtual;
 end;

 tc2 = class(tc1)
  public
   method test(); override;
 end;

constructor tc1.create();
begin
end;

destructor tc1.destroy();
begin
end;

method tc1.test();
begin
 exitcode:= 112;
end;

method tc2.test();
begin
 inherited test();
 exitcode:= exitcode+11;
end;

type
 ppointer = ^pointer;
var
 c1: tc1;
 po1: ppointer;

begin
 c1:= tc2.create();
 c1.test();
 c1.destroy();
end.
