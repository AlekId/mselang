program selftest;

type
 ttest = class
  private
   ffield: int32;
   function getfield(): int32;
   procedure setfield(avalue: int32);
  public
   constructor create();
   destructor destroy();
   property field: int32 read getfield write setfield;
   procedure test();
 end;

{ ttest }

constructor ttest.create();
begin
 self.ffield:= 122;
end;

destructor ttest.destroy();
begin
end;

function ttest.getfield(): int32;
begin
 result:= self.ffield;
end;

procedure ttest.setfield(avalue: int32);
begin
 self.ffield:= avalue;
end;

procedure ttest.test();
begin
 self.field:= self.ffield + 1;
 exitcode:= self.field;
end;

var
 t1: ttest;

begin
 t1:= ttest.create();
 t1.test();
 t1.destroy();
end.
